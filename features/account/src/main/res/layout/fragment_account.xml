<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/accountParent"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    android:focusable="true">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/design_white">

        <androidx.core.widget.NestedScrollView
            android:id="@+id/accountView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/accountHost"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="12dp"
                    android:fontFamily="@font/open_sans_bold_700"
                    android:text="@string/account_profile_driver_information"
                    android:textAlignment="textStart"
                    android:textColor="@color/color_black"
                    android:textSize="16sp" />

                <include
                    android:id="@+id/profileCard"
                    layout="@layout/layout_user_info_card" />

                <include
                    android:id="@+id/addProfileCard"
                    layout="@layout/layout_add_user_info"
                    android:visibility="gone" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                </LinearLayout>

                <include
                    android:id="@+id/accountVehicles"
                    layout="@layout/layout_account_vehicles" />

            </LinearLayout>

        </androidx.core.widget.NestedScrollView>

    </FrameLayout>

    <com.telematics.core.common.view.ProgressIndicator
        android:id="@+id/progress_bar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        tools:visibility="gone" />
</FrameLayout>

