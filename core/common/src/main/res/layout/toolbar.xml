<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/toolbar_parent"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="8dp"
    tools:background="@color/design_light_black_90">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/toolbar_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="@dimen/dash_user_bar_margin_side"
        android:paddingTop="@dimen/dash_user_bar_margin_top"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/user_profile"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/chat"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/toolbar_avatar"
                android:layout_width="@dimen/dash_user_bar_avatar_size"
                android:layout_height="@dimen/dash_user_bar_avatar_size"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="ContentDescription" />

            <TextView
                android:id="@+id/toolbar_user_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dash_user_bar_name_margin_start"
                android:layout_marginEnd="4dp"
                android:fontFamily="@font/open_sans_bold_700"
                android:textAlignment="textStart"
                android:textColor="@color/design_white"
                android:textSize="16sp"
                app:autoSizeMaxTextSize="16sp"
                app:autoSizeMinTextSize="12sp"
                app:autoSizeStepGranularity="1sp"
                app:autoSizeTextType="uniform"
                android:visibility="gone"
                app:layout_constraintBottom_toTopOf="@+id/toolbar_email"
                app:layout_constraintEnd_toStartOf="@+id/arrow"
                app:layout_constraintStart_toEndOf="@id/toolbar_avatar"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_chainStyle="packed"
                tools:text="Captain Nemo"
                tools:visibility="visible"/>

            <TextView
                android:id="@+id/toolbar_email"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="@dimen/dash_user_bar_name_margin_start"
                android:layout_marginEnd="4dp"
                android:layout_marginTop="2dp"
                android:ellipsize="end"
                android:fontFamily="@font/open_sans_regular_400"
                android:gravity="start"
                android:maxLines="1"
                android:textColor="@color/neutral_white"
                android:textSize="14sp"
                android:visibility="gone"
                app:autoSizeMaxTextSize="14sp"
                app:autoSizeMinTextSize="8sp"
                app:autoSizeStepGranularity="1sp"
                app:autoSizeTextType="uniform"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/arrow"
                app:layout_constraintStart_toEndOf="@id/toolbar_avatar"
                app:layout_constraintTop_toBottomOf="@+id/toolbar_user_name"
                tools:ignore="SpUsage"
                tools:text="nemo@email.com"
                tools:visibility="visible" />

            <ImageView
                android:id="@+id/arrow"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:padding="4dp"
                android:src="@drawable/ic_arrow_forward_24"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:tint="@color/design_white"
                tools:tint="@color/design_white"
                tools:ignore="ContentDescription"
                android:visibility="gone"
                tools:visibility="g" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <ImageView
            android:id="@+id/chat"
            android:layout_width="@dimen/dash_user_bar_icon_size"
            android:layout_height="@dimen/dash_user_bar_icon_size"
            android:layout_marginEnd="8dp"
            android:padding="5dp"
            android:src="@drawable/ic_chat"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/toolbar_settings"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/user_profile"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="ContentDescription" />

        <ImageView
            android:id="@+id/toolbar_settings"
            android:layout_width="@dimen/dash_user_bar_icon_size"
            android:layout_height="@dimen/dash_user_bar_icon_size"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="@dimen/dash_user_bar_icon_margin_side"
            android:padding="@dimen/dash_user_bar_icon_padding"
            android:src="@drawable/ic_dash_settings"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/chat"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="ContentDescription" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/expanded_toolbar_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="@dimen/dash_user_bar_margin_side"
        android:paddingBottom="16dp"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@+id/toolbar_layout"
        tools:visibility="visible">

        <ImageView
            android:id="@+id/expanded_avatar"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/avatar_white_background"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="ContentDescription" />

        <ImageView
            android:id="@+id/edit_avatar"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="2dp"
            android:clickable="true"
            android:foreground="@drawable/edit_avatar_ripple_effect"
            android:src="@drawable/ic_edit_image"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="@+id/expanded_avatar"
            app:layout_constraintEnd_toEndOf="@+id/expanded_avatar"
            tools:ignore="ContentDescription,KeyboardInaccessibleWidget,UnusedAttribute" />

        <TextView
            android:id="@+id/userName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/open_sans_bold_700"
            android:gravity="center"
            android:textColor="@color/neutral_white"
            android:textSize="16sp"
            android:visibility="gone"
            app:autoSizeMaxTextSize="16sp"
            app:autoSizeMinTextSize="8sp"
            app:autoSizeStepGranularity="1sp"
            app:autoSizeTextType="uniform"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/expanded_avatar"
            tools:ignore="SpUsage" />

        <TextView
            android:id="@+id/email"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="10dp"
            android:ellipsize="end"
            android:fontFamily="@font/open_sans_bold_700"
            android:gravity="center"
            android:maxLines="1"
            android:textColor="@color/neutral_white"
            android:textSize="15sp"
            android:visibility="gone"
            app:autoSizeMaxTextSize="15sp"
            app:autoSizeMinTextSize="8sp"
            app:autoSizeStepGranularity="1sp"
            app:autoSizeTextType="uniform"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/userName"
            tools:ignore="SpUsage" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>