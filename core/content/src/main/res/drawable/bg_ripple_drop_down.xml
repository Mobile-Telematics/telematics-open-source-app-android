<?xml version="1.0" encoding="utf-8"?>
<ripple xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="@color/design_dark_white">

    <item android:id="@android:id/background">
        <shape android:shape="rectangle">
            <solid android:color="@color/design_white" />
            <corners android:radius="8dp" />
            <stroke
                android:width="1dp"
                android:color="@color/design_grey_stroke" />
        </shape>
    </item>

    <item android:id="@android:id/mask">
        <shape android:shape="rectangle">
            <solid android:color="@color/design_dark_white" />
            <corners android:radius="8dp" />
            <stroke
                android:width="1dp"
                android:color="@color/design_grey_stroke" />
        </shape>
    </item>

</ripple>

