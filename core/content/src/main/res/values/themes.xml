<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="android:fontFamily">@font/open_sans_regular_400</item>
        <item name="colorControlHighlight">@android:color/transparent</item>
        <item name="android:navigationBarColor">@color/navigationMenuBarOnMain</item>
    </style>


    <!--STYLES-->

    <style name="TextLabel" parent="TextAppearance.AppCompat">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColorHint">@color/design_light_grey</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/colorPrimaryText</item>
        <item name="colorControlNormal">@color/colorPrimaryText</item>
        <item name="colorControlActivated">@color/color_black</item>
        <item name="colorControlHighlight">@color/color_black</item>
        <item name="android:fontFamily">@font/open_sans_regular_400</item>
    </style>

    <style name="EditText">
        <item name="android:padding">8dp</item>
        <item name="android:layout_width">242dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:maxLines">1</item>
        <item name="android:singleLine">true</item>
        <item name="colorControlNormal">@color/colorPrimaryText</item>
        <item name="android:textColor">@color/colorPrimaryText</item>
        <item name="colorControlActivated">@color/color_black</item>
        <item name="colorControlHighlight">@color/color_black</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/open_sans_regular_400</item>
    </style>

    <style name="TextLabelWizard" parent="TextLabel">
        <item name="android:textSize">16sp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/acc_wizard_input_margin_side</item>
        <item name="android:layout_marginEnd">@dimen/acc_wizard_input_margin_side</item>
        <item name="android:layout_marginBottom">@dimen/acc_wizard_input_margin_bottom</item>
        <item name="android:paddingBottom">@dimen/acc_wizard_input_padding_bottom</item>
        <item name="android:backgroundTint">@android:color/transparent</item>
        <item name="android:drawablePadding">10dp</item>
    </style>

    <!-- Button -->
    <style name="Button">
        <item name="android:textAllCaps">false</item>
        <item name="android:background">@drawable/selector_default_btn</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:textColor">@color/default_button_text_sel</item>
        <item name="android:textSize">15sp</item>
        <item name="android:fontFamily">@font/open_sans_regular_400</item>
        <item name="fontFamily">@font/open_sans_regular_400</item>
    </style>

    <!-- Button -->
    <style name="ButtonOrange" parent="Button">
        <item name="android:background">@drawable/selector_orange_btn</item>
    </style>

    <!-- for BottomNavigationView text size -->
    <style name="bottom_normal_text">
        <item name="android:textColor">#000</item>
        <item name="android:textSize">11sp</item>
    </style>

    <style name="bottom_selected_text">
        <item name="android:textColor">#000</item>
        <item name="android:textSize">11sp</item>
    </style>

    <style name="MapProgressBarTheme" parent="AppTheme">
        <item name="colorAccent">@color/colorGreenText</item>
    </style>

    <style name="app_toolbar">
        <item name="android:textStyle">normal</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">18sp</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:fontFamily">@font/open_sans_bold_700</item>
    </style>

</resources>